@model IEnumerable<InventoryManagement.DataModel.InvoiceVM>

@{
    ViewData["Title"] = "SaleList";
}

<h1>SaleList</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                CustomerName
            </th>
            <th>
                Date
            </th>
            <th>
                Address
            </th>
            <th>
                Phone
            </th>
            <th>
                Description
            </th>
            
            <th>
                Discount
            </th>
            <th>
                TotalDiscount
            </th>
            <th>
                Subtotal
            </th>
            <th>
                GrandTotal
            </th>
            <th>
                Due
            </th>
            <th>
                PaymentType
            </th>
            <th>
                Slip
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.CustomerName
            </td>
            <td>
                @item.Date
            </td>
            <td>
                @item.Address
            </td>
            <td>
                @item.Phone
            </td>
            <td>
                @item.Description
            </td>
            
            <td>
                @item.Discount
            </td>
            
            <td>
                @item.Subtotal
            </td>
            <td>
                @item.GrandTotal
            </td>
            <td>
                @item.Due
            </td>
            <td>
                @item.PaymentType
            </td>
            <td>
                @item.Slip
            </td>
            <td>
                    
                    @* <a href="@Url.Action("DeleteInvoice", "Invoice", new { id = @item.InvoiceID })" asp-action="Delete" asp-route-id="@item.InvoiceID" class="btn btn-xs btn-danger">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
