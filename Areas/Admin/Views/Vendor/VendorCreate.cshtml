@model InventoryManagement.DataModel.Vendors

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create Vendor";
}

<div class="card card-primary mt-4 mx-auto" style="max-width: 600px;">
    <div class="card-header" style="background-color:#717171">
        <h3 class="card-title text-white">Create Vendor</h3>
    </div>

    <!-- Correct form routing -->
    <form action="VendorCreateSubmit" controller="Vendor" method="post">
        <div class="card-body">

            <div class="mb-3">
                <input asp-for="VendorName" id="VendorName" name="VendorName" class="form-control" placeholder="Enter vendor name" oninput="this.value = this.value.replace(/[^a-zA-Z\s]/g, ''); showMessage('Only alphabets allowed', 'nameMsg')" />
                <div id="nameMsg" class="text-warning small"></div>
                <span asp-validation-for="VendorName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input asp-for="Phone" id="Phone" name="Phone" class="form-control" placeholder="Enter phone number" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input asp-for="Email" id="Email" name="Email" type="email" class="form-control" placeholder="Enter email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">      
                <input asp-for="Address" id="Address" name="Address" class="form-control" placeholder="Enter address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary" style="background-color:#717171">Submit</button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        function showMessage(msg, elementId) {
            const el = document.getElementById(elementId);
            el.innerText = msg;
            setTimeout(() => el.innerText = '', 1500);
        }
    </script>
}
