@model InventoryManagement.DataModel.Vendors

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit Vendor";
}

<div class="card card-primary mt-4">
    <div class="card-header" style="background-color:#717171">
        <h3 class="card-title text-white">Edit Vendor</h3>
    </div>

    <form asp-action="VendorEdit" method="post">
        <div class="card-body">

            <!-- Hidden ID -->
            <input type="hidden" name="VendorID" value="@Model.VendorID" />

            <!-- Vendor Name -->
            <div class="form-group mb-3">
                <label asp-for="VendorName" class="form-label">Name</label>
                <input name="VendorName" value="@Model.VendorName" class="form-control" placeholder="Enter vendor name" />
                <span asp-validation-for="VendorName" class="text-danger"></span>
            </div>

            <!-- Phone -->
            <div class="form-group mb-3">
                <label asp-for="Phone" class="form-label">Phone</label>
                <input name="Phone" value="@Model.Phone" class="form-control" placeholder="Enter phone number" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input name="Email" value="@Model.Email" class="form-control" placeholder="Enter email address" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Address -->
            <div class="form-group mb-3">
                <label asp-for="Address" class="form-label">Address</label>
                <textarea name="Address" class="form-control" rows="3" placeholder="Enter address">@Model.Address</textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary" style="background-color:#717171">Update Vendor</button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
